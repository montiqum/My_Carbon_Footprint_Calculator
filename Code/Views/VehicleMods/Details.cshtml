@model MyCarbonFootprintCalculator.Models.VehicleMod

@{
    ViewData["Title"] = "Details";
}

<h4>Details</h4>

<div style="grid-template-rows: 50px 1fr; grid-template-columns: 60% 30%; display:grid;">
    <h4 style="grid-area:1/1/2/3;">Vehicle Data</h4>
    <hr />
    <div style="grid-area: 2/1/3/2;">
        <dl class="row" style=" min-width:1200px;">
            @if (ViewBag.CurrentUserId == 1)
            {
                <dt class="col-sm-2">
                    Vehicle Id
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VehicleId)
                </dd>    
            }
            <dt class="col-sm-2">
                Number of Vehicles
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoOfVehicles)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Make)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Make)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Mileage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Mileage)
            </dd>
        </dl>
            <a asp-action="Edit" asp-route-id="@Model.VehicleId">Edit</a> |
            <a asp-controller="FoodMods" asp-action="Create">Next</a>
            <p class="admin-index" style="margin-top: 20px;">
                @if (ViewBag.CurrentUserId == 1)
                {
                    <a asp-action="Index">Back to List</a> 
                }
            </p>
        </div>
        <div style="grid-area: 1/2/3/3; margin-top:10px; margin-left:0px; padding-left:0px;">
            <a href="https://onetreeplanted.org/pages/carbon-footprint" target="_blank">
                <img alt="Qries" src="/images/vehicleinfo.png"
                     style="width:350px; height:400px; border-radius:10px; border-color:blue; border-width:5px; border-style:double;">
            </a>
        </div>
    </div>
