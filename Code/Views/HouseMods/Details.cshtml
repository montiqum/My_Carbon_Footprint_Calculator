@model MyCarbonFootprintCalculator.Models.HouseMod

@{ ViewData["Title"] = "Details"; }

<h4>Details</h4>

<div style="grid-template-rows: 50px 1fr; grid-template-columns: 60% 30%; display:grid;">
    <h4 style="grid-area:1/1/2/3;">House Information</h4>
    <hr />
    <div style="grid-area: 2/1/3/2;">
        <dl class="row" style=" min-width:900px;">
            @if (ViewBag.CurrentUserId == 1)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HouseId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HouseId)
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Size)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Size)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sqft)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sqft)
            </dd>
            <dt class="col-sm-2">
                Energy Usage $
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Energy_Usage)
            </dd>
            <dt class="col-sm-2">
                Energy Type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Energy_Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Solar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Solar)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gas)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gas)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Electric)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Electric)
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.HouseId">Edit</a> |
        <a asp-controller="VehicleMods" asp-action="Create">Next</a>
        <p class="admin-index" style="margin-top: 20px;">
            @if (ViewBag.CurrentUserId == 1)
            {
                <a asp-action="Index">Back to List</a> 
            }
        </p>
    </div>
    <div style="grid-area: 1/2/3/3; margin-top:10px; margin-left:0px; padding-left:0px;">
        <a href="https://www.greenmatters.com/p/reduce-carbon-footprint-at-home" target="_blank">
            <img alt="Qries" src="/images/houseinfo.png"
                 style="width:350px; height:400px; border-radius:10px; border-color:blue; border-width:5px; border-style:double;">
        </a>
    </div>
</div>

