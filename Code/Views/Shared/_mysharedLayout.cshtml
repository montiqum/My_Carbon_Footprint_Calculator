<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyCarbonFootprintCalculator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tabs.css" />
    <link rel="stylesheet" href="~/css/footprint.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Rancho&effect=shadow-multiple|3d-float" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Rancho&effect=fire|fire-animation" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    @RenderSection("link1", false)

</head>
<body style="grid-template-rows: 80px 10px 80px 250px 15px; grid-template-columns: 50px 50px 50px 50px 50px 50px;">
    <header class="main-header" style="grid-area:1/1/2/7;">
        <h1>My Carbon FootPrint Calculator</h1>
    </header>
    <div style="grid-area:2/6/3/7 !important; font-size:medium; font-family:cursive; background-color:blue; float:right; color:white !important; border-radius:5px;">
        <a asp-controller="Account" asp-action="Logout" >Logout</a>
    </div>
        
    <nav class="navbar navbar-expand" style="grid-area:3/1/4/7; background-color:lightgoldenrodyellow">
        <div class="container">
            <ul class=" navbar-nav"
                <li class="nav-item">
                    <a class="nav-link text-dark" style="padding-right:65px; padding-left:65px" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" style="padding-right:65px; padding-left:65px" asp-area="" asp-controller="GenInfoMods" asp-action="Create">USER</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" style="padding-right:65px; padding-left:65px" asp-area="" asp-controller="HouseMods" asp-action="Create">HOUSE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" style="padding-right:65px; padding-left:65px" asp-area="" asp-controller="VehicleMods" asp-action="Create">VEHICLES</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" style="padding-right:65px; padding-left:65px" asp-area="" asp-controller="FoodMods" asp-action="Create">FOOD</a>
                </li>
                <li class="nav-item current">
                    <a class="nav-link text-dark " style="padding-right:65px; padding-left:65px" asp-area="" asp-controller="UserPage" asp-action="Footprint">FOOTPRINT</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="grid-area: 4/1/5/7;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="grid-area:5/1/6/7 !important;">
        <div class="container">
            &copy; 2021 - MyCarbonFootprintCalculator - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
