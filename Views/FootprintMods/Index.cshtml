@model IEnumerable<MyCarbonFootprintCalculator.Models.FootprintMod>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Travel_emm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HH_Emm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Waste_emm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_emm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Travel_emm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HH_Emm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Waste_emm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_emm)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CFPId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CFPId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CFPId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
